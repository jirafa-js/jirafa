{
  "name": "@jirafa/jirafa-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@7.1.0",
  "description": "jirafa.js monorepo",
  "author": "linco",
  "license": "MIT",
  "homepage": "https://github.com/jirafa-js/jirafa",
  "keywords": [],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "cz": "czg",
    "preinstall": "only-allow pnpm -y",
    "prepare": "husky install",
    "changelog": "jirafa changelog",
    "gen": "jirafa create",
    "docs:dev": "pnpm run -F docs dev",
    "docs:serve": "pnpm run -F docs serve",
    "docs:build": "pnpm run -F docs build",
    "docs:gen-locale": "pnpm run -F docs gen-locale",
    "test": "vitest",
    "typecheck": "run-p typecheck:**",
    "typecheck:web": "vue-tsc -p tsconfig.web.json --composite false --noEmit",
    "typecheck:node": "vue-tsc -p tsconfig.node.json  --composite false  --noEmit",
    "typecheck:vitest": "vue-tsc -p tsconfig.vitest.json  --composite false  --noEmit"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@jirafa/utils": "workspace:*",
    "cli": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@esbuild-kit/cjs-loader": "^2.3.1",
    "@jirafa/cli": "workspace:*",
    "@jirafa/eslint-config": "^1.1.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jsdom": "^20.0.0",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vitejs/plugin-vue-jsx": "^2.0.0",
    "@vue/test-utils": "^2.0.2",
    "cz-git": "^1.3.9",
    "czg": "^1.3.9",
    "esbuild": "^0.14.49",
    "eslint": "^8.17.0",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "only-allow": "^1.1.0",
    "tsx": "^3.8.0",
    "typescript": "^4.7.4",
    "unplugin-vue-define-options": "^0.6.2",
    "vitest": "^0.18.1",
    "vue": "^3.2.37",
    "vue-tsc": "^0.39.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,md,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
