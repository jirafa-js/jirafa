{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["unplugin-vue-define-options"],
    "skipLibCheck": true
  },
  "include": ["packages"],
  "exclude": [
    "node_modules",
    "packages/cli/*",
    "**/dist",
    "**/__tests__/**/*",
    "**/*.md"
  ]
}
