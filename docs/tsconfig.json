{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["WebWorker", "DOM"],
    "jsx": "preserve",
    "types": [],
    "paths": {
      "~/*": ["./.vitepress/theme/*"]
    }
  },
  "include": ["**/*", ".vitepress/**/*"],
  "exclude": ["node_modules"]
}
